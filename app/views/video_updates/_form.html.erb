<%if !@video_update.new_record? and @video_update.youtube_id.nil?%>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="form-group">
          <%= form_tag @upload_info[:url], multipart: true, class: "form-horizontal" do %>
            <%= hidden_field_tag :token, @upload_info[:token] %>
            <fieldset>
              <legend class="text-center">Upload a video</legend>

              <div class="form-group">
                <%= label_tag :file, nil, class:"col-md-3 control-label" %>
                <div class="col-md-9">
                  <%= file_field_tag :file, class: "form-control" %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-md-12 text-right">
                <%= submit_tag "Upload video", class: "btn btn-primary btn-md" %>
                </div>
              </div>

            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<%else%>

  <div class="container3">
    <div class="row">
   
      <div class="col-md-6 col-md-offset-3">
        <div class="well well-sm">
          <%= form_for(@video_update, url: startup_video_update_path(@startup), html: {class: "form-horizontal"}) do |f| %>
            <fieldset>
              <legend class="text-center"><h4>Give your update a badass title.</h4></legend>
              <% if @video_update.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@video_update.errors.count, "error") %> prohibited this app from being saved:</h2>

                  <ul>
                  <% @video_update.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="form-group">
                <%= f.label :title, class:"col-md-3 control-label" %>
                <div class="col-md-9">
                  <%= f.text_field :title, class: "form-control" %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-md-12 text-right">
                  <%= f.submit "Now you can upload a video...", class: "btn btn-primary btn-md" %>
                </div>
              </div>
            <% end %>
          </fieldset>
        </div>
      </div>
    </div>
  </div>
<%end%>
