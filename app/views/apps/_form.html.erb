

<%if !@app.new_record? and @app.youtube_id.nil?%>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="form-group">
          <%= form_tag @upload_info[:url], multipart: true, class: "form-horizontal" do %>
            <%= hidden_field_tag :token, @upload_info[:token] %>
            <fieldset>
              <legend class="text-center">Upload a video</legend>

              <div class="form-group">
                <%= label_tag :file, nil, class:"col-md-3 control-label" %>
                <div class="col-md-9">
                  <%= file_field_tag :file, class: "form-control" %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-md-12 text-right">
                <%= submit_tag "Upload video", class: "btn btn-primary btn-md" %>
                </div>
              </div>
          
              

            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<%else%>

  <div class="container3">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well well-sm">
          <%= form_for(@app, html: {class: "form-horizontal"}) do |f| %>
            <fieldset>
              <legend class="text-center"><h2>Add Your Startup</h2></legend>
              <% if @app.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@app.errors.count, "error") %> prohibited this app from being saved:</h2>

                  <ul>
                  <% @app.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <h4>

              <div class="form-group">
                <%= f.label :name, class:"col-md-3 control-label" %>
                <div class="col-md-9">
                  <%= f.text_field :name, class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :tagline, class:"col-md-3 control-label" %>
                <div class="col-md-9">
                  <%= f.text_field :tagline, class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :website, class:"col-md-3 control-label" %>
                <div class="col-md-9">
                  <%= f.text_field :website, class: "form-control" %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :logo, class:"col-md-3 control-label" %>
                <div class="col-md-9">
                  <%= f.file_field :logo, class: "form-control" %>
                  <%= f.hidden_field :logo_cache %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :category, class:"col-md-3 control-label" %>
                <div class="col-md-9">
                  <%= f.select :category, App::CATEGORIES.collect {|cat| [cat,cat]}, class: "form-control" %>
                </div>
              </div>
              </h4>



              <div class="form-group">
                <div class="col-md-12 text-right">
                  <%= f.submit "Save", class: "btn btn-red btn-md" %>
                </div>
              </div>
            <% end %>
          </fieldset>
        </div>
      </div>
    </div>
  </div>
  
<%end%>
