<div class="panel-body">
  <div class="container3" style="height: 600px;">
    <div class="row">
 
      <h4>Flyy Learning</h4>
      <p>click on something you wanna know more about</p>    
      <br />
      <div class="col-md-4">
        <% @topics.each do |topic|  %>
          <!-- Success buttons messages -->
          <%= link_to topic.name, topics_get_topic_description_path(id: topic.id), remote: true, class: "btn btn-default btn-block" %>
        <% end %>
      </div>

      <div class="col-md-6" id="topic_message">
        <!-- Success messages -->           
      </div>
    </div>
  </div>
</div>
